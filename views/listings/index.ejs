<% layout("layouts/boilerplate") %> <%=success%>

<!-- <div class="container mt-4"> -->
<!-- <h3 class="mb-3">All Listings</h3> -->
<style>
  #filters {
    margin-top: 1rem;
    display: flex;
    flex-wrap: wrap;
  }

  .filter {
    text-align: center;
    margin-right: 2rem;
    margin-top: 2rem;
    opacity: 0.7;
  }

  .filter:hover {
    opacity: 1;
    cursor: pointer;
  }
  .filter p {
    font-size: 0.8rem;
  }
  .tax-info {
    display: none;
    /* visibility: inherit; */
  }

  .tax-toggle {
    border: 1px solid black;
    border-radius: 1rem;
    height: 3.1rem;
    padding: 1rem;
    margin-left: 2rem;
    display: flex;
    align-items: center;
  }
</style>

<div id="filters">
  <div class="filter">
    <i class="fa-solid fa-fire"></i>
    <p>Trending</p>
  </div>
  <div class="filter">
    <i class="fa-solid fa-mountain"></i>
    <p>Mountain</p>
  </div>
  <div class="filter">
    <i class="fa-solid fa-bed"></i>
    <p>Room</p>
  </div>
  <div class="filter">
    <i class="fa-solid fa-tree"></i>
    <p>forest</p>
  </div>
  <div class="filter">
    <i class="fa-solid fa-city"></i>
    <p>Cities</p>
  </div>
  <div class="filter">
    <i class="fa-solid fa-water"></i>
    <p>River</p>
  </div>
  <div class="filter">
    <i class="fa-brands fa-fort-awesome"></i>
    <p>Castles</p>
  </div>
  <div class="filter">
    <i class="fa-solid fa-person-swimming"></i>
    <p>Amazing pool</p>
  </div>
  <div class="filter">
    <i class="fa-solid fa-campground"></i>
    <p>Camping</p>
  </div>
  <div class="filter">
    <i class="fa-solid fa-tractor"></i>
    <p>Farms</p>
  </div>
  <div class="filter">
    <i class="fa-solid fa-gem"></i>
    <p>Desert</p>
  </div>
  <div class="filter">
    <i class="fa-regular fa-building"></i>
    <p>Ancient</p>
  </div>

  <div class="tax-toggle">
    <div class="form-check form-switch form-check-reverse">
      <input
        class="form-check-input"
        type="checkbox"
        role="switch"
        id="switchCheckChecked"
      />
      <label class="form-check-label" for="switchCheckChecked"
        >Display total amount after taxes</label
      >
    </div>
  </div>
</div>

<div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1">
  <!-- card start -->
  <% for (let listing of allListings) { %>
  <a href="/listings/<%= listing._id %>" class="listing-link">
    <div class="card col mb-3 listing-card">
      <img
        src="<%= listing.image.url%>"
        class="card-img-top"
        alt="listing_image"
        style="height: 20rem"
      />
      <div class="card-img-overlay"></div>
      <div class="card-body">
        <p class="card-text">
          <b><%= listing.title %></b> <br />
          &#8377;<%=listing.price.toLocaleString("en-IN")%>/night
        </p>
        <i class="tax-info">&nbsp;&nbsp;+18% GST</i>
        <!--this is creating  equal to the number of list-->
      </div>
    </div>
  </a>
  <% } %>
</div>

<script>
  let taxSwitch = document.getElementById("switchCheckChecked");
  taxSwitch.addEventListener("click", () => {
    let taxInfo = document.getElementsByClassName("tax-info");
    for (info of taxInfo) {
      if (info.style.display != "inline") {
        info.style.display = "inline";
      } else {
        info.style.display = "none";
      }
    }
  });
</script>
